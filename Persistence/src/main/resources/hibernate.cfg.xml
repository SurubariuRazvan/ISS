<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/MPPExamTest</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">793582</property>
        <property name="show_sql">true</property>

        <mapping class="com.exam.domain.User"/>
        <mapping class="com.exam.domain.Student"/>
        <mapping class="com.exam.domain.Game"/>
        <mapping class="com.exam.domain.Round"/>
        <mapping class="com.exam.domain.Word"/>
        <mapping class="com.exam.domain.UserType"/>
        <mapping class="com.exam.domain.LetterSet"/>
        <mapping class="com.exam.domain.LetterSetValue"/>
    </session-factory>
</hibernate-configuration>